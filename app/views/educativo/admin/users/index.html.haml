-title 'Listing users'

.row
  .col-md-6
    = link_to 'New User', new_admin_user_path, { :class=>"btn btn-primary" }
  .col-md-6{:style => "text-align:right"}
    = form_tag(admin_users_path, :method => "post", :class => "form-inline") do
      .form-group
        = text_field_tag("search[q]", params[:q], :class => "form-control")
      .form-group
        = submit_tag(t('form.btn_search'), :class => "btn btn-default")
%hr

%table.table.table-striped
  %thead
    %tr
      %th #
      %th Username
      %th Password
      %th Type user
      %th
      %th
      %th
  %tbody
  - @users.each do |user|
    %tr
      %td= user.id
      %td= user.username
      %td= user.password
      %td= user.type_user
      %td= link_to 'Show', admin_user_path(user)
      %td= link_to 'Edit', edit_admin_user_path(user)
      %td= link_to 'Destroy', [:admin, user], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
