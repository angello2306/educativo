!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Educativo'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Educativo'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    #main{:role => "main"}
      = render 'shared/backend/navigation'

      .container
        .content-wrapper
          .row
            #content.col-md-12

              = render 'shared/backend/messages'
              = render 'shared/backend/header_content'
              = yield

        %footer
          = render 'shared/backend/footer'